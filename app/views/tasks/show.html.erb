<% provide(:title, 'タスク詳細') %>
<h1>タスク詳細</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= form_with(model: @task, local: true) do |f| %>
        <%= f.label :title, "タスク名" %>
        <%= f.text_field :title, class: 'form-controll' %>

        <%= f.label :body, "タスク内容" %>
        <%= f.text_area :body, class: 'form-controll'  %>
      <% end %>
    </div>
  </div>
</div>