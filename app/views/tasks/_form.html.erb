<div class="container">
  <%= render 'shared/error_messages' %>

  <%= form_with(model: @task, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :title, class: 'form_control' %>
      <%= f.text_field :title, class: 'form-controll' %>
    </div>

    <div class="form-group">
      <%= f.label :body, class: 'form_control' %>
      <%= f.text_area :body, class: 'form-controll'  %>
    </div>
    
    <div class="form-group">
      <%= f.label :due_time, class: 'form_control' %>
      <%= f.datetime_field :due_time, class: 'form_control' %>
    </div>

    <div class="form-group">
      <%= f.label :status, class: 'form_control' %>
      <%= f.select :status, Task.statuses.keys.to_a, class: 'form_control' %>
    </div>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  <% end %>
  </div>